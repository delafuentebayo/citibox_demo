<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/padding_10"
              android:gravity="center_vertical">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/corner_radius"
            app:elevation="@dimen/elevation_10"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_10"
                android:orientation="horizontal"
                >
            <ImageView
                    android:id="@+id/item_episode_detail_iv"
                    android:layout_width="@dimen/image_70"
                    android:layout_height="@dimen/image_70"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginEnd="@dimen/margin_15"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/item_episode_detail_name_tv"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_episode_detail_type_tv"
                        android:layout_marginTop="@dimen/margin_5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_episode_detail_status_tv"
                        android:layout_marginTop="@dimen/margin_5"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>